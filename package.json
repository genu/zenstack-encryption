{
    "name": "zenstack-encryption",
    "version": "0.1.0",
    "description": "ZenStack Encryption Plugin - Automatic field encryption/decryption for @encrypted fields",
    "keywords": [
        "zenstack",
        "encryption",
        "aes",
        "crypto",
        "plugin"
    ],
    "homepage": "https://github.com/genu/zenstack-encryption#readme",
    "bugs": {
        "url": "https://github.com/genu/zenstack-encryption/issues"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/genu/zenstack-encryption.git"
    },
    "files": [
        "dist",
        "plugin.zmodel",
        "LICENSE",
        "README.md"
    ],
    "type": "module",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.mts",
            "default": "./dist/index.mjs"
        },
        "./plugin.zmodel": "./plugin.zmodel",
        "./package.json": "./package.json"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsdown",
        "watch": "tsdown --watch",
        "lint": "eslint .",
        "test": "vitest run",
        "prepublishOnly": "pnpm run build",
        "prepack": "pnpm run build"
    },
    "peerDependencies": {
        "@zenstackhq/orm": ">=3.3.0"
    },
    "dependencies": {
        "zod": "4.0.0"
    },
    "devDependencies": {
        "@zenstackhq/orm": "3.3.2",
        "eslint": "9.0.0",
        "tsdown": "0.20.0",
        "typescript": "5.9.0",
        "typescript-eslint": "8.0.0",
        "vitest": "3.0.0"
    },
    "packageManager": "pnpm@10.12.1"
}
